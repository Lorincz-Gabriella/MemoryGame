<Window x:Class="JocMemory.View.WinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Victory!"
        Height="250" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="10" Background="#FFF8F0" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="🎉 Congratulations!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#504746"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="You won the game! "
                       FontSize="16"
                       Foreground="#504746"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button Content="OK"
                    Width="100"
                    Height="40"
                    Background="#B89685"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="Ok_Click"
                    Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4"/>
                </Button.Effect>
            </Button>

        </StackPanel>
    </Border>
</Window>
