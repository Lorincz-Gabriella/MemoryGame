<Window x:Class="JocMemory.View.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Statistics"
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="10" Background="#FFF8F0" Padding="15">
        <StackPanel>
            <TextBlock Text="Player Statistics"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#504746"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <ListBox ItemsSource="{Binding Users}"
                     Background="WhiteSmoke"
                     BorderBrush="#B89685"
                     BorderThickness="1"
                     Padding="5"
                     FontSize="16"
                     Foreground="#504746"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="5" TextWrapping="Wrap">
                            <Run Text="{Binding Name}" FontWeight="Bold"/>
                            <Run Text=" – " />
                            <Run Text="{Binding GamesPlayed}" />
                            <Run Text=" games played – " />
                            <Run Text="{Binding GamesWon}" />
                            <Run Text=" won" />
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Border>
</Window>
