<Window x:Class="JocMemory.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Height="300" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="10" Background="#FFF8F0" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Student Name:"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#504746"
                       TextAlignment="Center"/>
            <TextBlock Text="Lorincz Gabriella"
                       FontSize="16"
                       Foreground="#B89685"
                       Margin="0,0,0,15"
                       TextAlignment="Center"/>

            <TextBlock Text="Email:"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#504746"
                       TextAlignment="Center"/>
            <TextBlock Text="gabriella.lorincz@student.unitbv.ro"
                       FontSize="16"
                       Foreground="SteelBlue"
                       TextDecorations="Underline"
                       TextAlignment="Center"
                       Cursor="Hand"
                       MouseDown="Email_Click"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Group: 10LF232"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#504746"
                       TextAlignment="Center"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Major: Computer Science"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#504746"
                       TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
