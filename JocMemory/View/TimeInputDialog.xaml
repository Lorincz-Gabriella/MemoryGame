<Window x:Class="JocMemory.View.TimeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Game Time"
        Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F0"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="10" Background="#FFF8F0" Padding="15">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Set time (minutes):"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#504746"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="TimeBox"
                     Width="100"
                     Height="30"
                     FontSize="14"
                     Background="WhiteSmoke"
                     BorderBrush="#B89685"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="OK"
                        Width="80"
                        Height="35"
                        Background="#B89685"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="5"
                        Click="Ok_Click"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4"/>
                    </Button.Effect>
                </Button>

                <Button Content="Cancel"
                        Width="80"
                        Height="35"
                        Background="#B89685"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="5"
                        Click="Cancel_Click"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
